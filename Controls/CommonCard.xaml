<UserControl
    x:Class="RecipesWinUI.Controls.CommonCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="CardWrapper"
          Margin="0,0,0,12"
          CornerRadius="12"
          Translation="0,0,6">

        <Grid.Shadow>
            <ThemeShadow/>
        </Grid.Shadow>

        <Border x:Name="CardRoot"
                Padding="16"
                CornerRadius="12"
                Background="#FFF5E4C1"
                BorderBrush="#FFD7C0A1"
                BorderThickness="2">

            <StackPanel x:Name="StackRoot">
                <ContentPresenter x:Name="ContentHost"/>

                <ContentPresenter x:Name="ExpandHost"
                          Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <Button x:Name="DeleteButton"
                Tapped="DeleteButton_Tapped"
                Width="45"
                Height="45"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Visibility="Collapsed"
                Background="#FFCC3B3B"
                Foreground="White"
                CornerRadius="36"
                Margin="0,0,35,0">

            <FontIcon Glyph="&#xE74D;"/>
        </Button>

    </Grid>
</UserControl>
