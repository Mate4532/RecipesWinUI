<UserControl
    x:Class="RecipesWinUI.Controls.ConfirmPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="Root"
          Background="#88000000"
          Visibility="Collapsed"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Border Background="#FFF5E4C1"
                BorderBrush="#FFD7C0A1"
                BorderThickness="2"
                CornerRadius="12"
                Padding="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="380"
                MaxWidth="650">

            <StackPanel Spacing="16">

                <TextBlock x:Name="TitleText"
                           Text="Megerősítés"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF4B3A2E"
                           HorizontalAlignment="Center"/>

                <TextBlock x:Name="MessageText"
                           Text="Biztos vagy benne?"
                           FontSize="18"
                           TextAlignment="Center"
                           Foreground="#FF4B3A2E"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="16">

                    <Button x:Name="CancelButton"
                            Content="Mégse"
                            Width="120"
                            Background="#FFE5C99F"
                            Foreground="#FF4B3A2E"
                            CornerRadius="6"
                            Padding="8,4"
                            Click="Cancel_Click"/>

                    <Button x:Name="ConfirmButton"
                            Content="Törlés"
                            Width="120"
                            Background="#FFCC3B3B"
                            Foreground="White"
                            CornerRadius="6"
                            Padding="8,4"
                            Click="Confirm_Click"/>
                </StackPanel>


            </StackPanel>

        </Border>
    </Grid>
</UserControl>
