<Page
    x:Class="RecipesWinUI.Views.EditIngredientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:RecipesWinUI.ViewModels"
    xmlns:converters="using:RecipesWinUI.Converters"
    xmlns:controls="using:RecipesWinUI.Controls">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        
        <ScrollViewer Background="#FFE8D8B8"
                      VerticalScrollBarVisibility="Auto">

            <Grid HorizontalAlignment="Center"
                  Padding="24"
                  VerticalAlignment="Center">

                <Border Background="#FFF5E4C1"
                        BorderBrush="#FFD7C0A1"
                        BorderThickness="2"
                        CornerRadius="12"
                        Padding="24"
                        Width="500"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">

                    <StackPanel Spacing="20">

                        <TextBlock Text="Összetevő módosítása"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#FF4B3A2E"
                                   HorizontalAlignment="Center"/>

                        <StackPanel>
                            <TextBlock Text="Név"
                                       Margin="0,0,0,5"
                                       Foreground="#FF4B3A2E"
                                       FontWeight="SemiBold"
                                       FontSize="20"/>

                            <TextBox PlaceholderText="Összetevő neve"
                                     Text="{Binding EditedName, Mode=TwoWay}"
                                     FontSize="16"
                                     BorderThickness="0"
                                     Padding="12,6"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Kalória / 100g"
                                       Margin="0,0,0,5"
                                       Foreground="#FF4B3A2E"
                                       FontWeight="SemiBold"
                                       FontSize="20"/>

                            <TextBox Text="{Binding EditedCalorie, Mode=TwoWay}"
                                     PlaceholderText="pl. 52"
                                     FontSize="16"
                                     BorderThickness="0"
                                     Padding="12,6"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Fehérje / 100g"
                                       Margin="0,0,0,5"
                                       Foreground="#FF4B3A2E"
                                       FontWeight="SemiBold"
                                       FontSize="20"/>

                            <TextBox Text="{Binding EditedProtein, Mode=TwoWay}"
                                     PlaceholderText="pl. 13"
                                     FontSize="16"
                                     BorderThickness="0"
                                     Padding="12,6"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Spacing="12"
                                    VerticalAlignment="Center">

                            <TextBlock Text="Miben mérhető az összetevő?"
                                       FontWeight="SemiBold"
                                       Foreground="#FF4B3A2E"
                                       Margin="0,5,0,0"
                                       FontSize="20"/>

                            <ComboBox x:Name="MeasurementComboBox"
                                      Width="140"
                                      VerticalAlignment="Center"
                                      Margin="10,5,0,0"
                                      ItemsSource="{Binding Units}"
                                      DisplayMemberPath="Label"
                                      SelectedItem="{Binding SelectedUnit, Mode=TwoWay}"
                                      FontSize="16"/>

                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Mérhető darabban?"
                                       Margin="0,0,0,10"
                                       Foreground="#FF4B3A2E"
                                       FontWeight="SemiBold"
                                       FontSize="20"/>
                            
                            <ToggleSwitch IsOn="{Binding EditedCanBeMeasuredInPiece, Mode=TwoWay}"
                                          OffContent="Nem"
                                          OnContent="Igen"
                                          FontSize="16"/>
                        </StackPanel>

                        <Grid Visibility="{Binding EditedCanBeMeasuredInPiece, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Darab súlya (g)"
                                       Margin="0,0,0,5"
                                       Foreground="#FF4B3A2E"
                                       FontWeight="SemiBold"
                                       FontSize="20"/>

                            <TextBox Grid.Row="1"
                                     Text="{Binding EditedOnePieceWeigh, Mode=TwoWay}"
                                     PlaceholderText="pl. 47"
                                     FontSize="16"
                                     BorderThickness="0"
                                     Padding="12,6"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal"
                                    Spacing="16"
                                    HorizontalAlignment="Center">

                            <Button Content="Mégse"
                                    Width="120"
                                    Padding="12,6"
                                    CornerRadius="6"
                                    Click="Cancel_Click"
                                    FontSize="18"/>

                            <Button Content="Mentés"
                                    Width="120"
                                    Padding="12,6"
                                    Background="#FFE5C99F"
                                    Foreground="#FF4B3A2E"
                                    CornerRadius="6"
                                    Click="Save_Click"
                                    FontSize="18"/>

                        </StackPanel>

                    </StackPanel>

                </Border>

            </Grid>

        </ScrollViewer>

        <controls:ConfirmPopup x:Name="Popup"/>

    </Grid>
</Page>
