<Page
    x:Class="RecipesWinUI.Views.IngredientListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:RecipesWinUI.ViewModels"
    xmlns:controls="using:RecipesWinUI.Controls">

    <Grid x:Name="LayoutRoot"
          Background="#FFE8D8B8">

        <ScrollViewer x:Name="ScrollHost"
                      ViewChanged="ScrollHost_ViewChanged">

            <StackPanel>

                <TextBlock Text="Összetevők"
                           FontSize="44"
                           FontWeight="Bold"
                           Foreground="#FF4B3A2E"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,16"/>

                <controls:ActionToolbar
                            x:Name="OriginalToolbar"
                            Margin="12,0,12,0"
                            EditButtonText="Módosítás"
                            AddButtonText="Hozzáadás"
                            SearchPlaceholderText="Összetevő keresése…"
                            EditClicked="EditIngredient_Click"
                            AddClicked="AddIngredient_Click"
                            SearchTextChanged="SearchIngredient_TextChanged" />

                <ListView x:Name="IngredientList"
                          ItemsSource="{Binding Ingredients}"
                          SelectionMode="Single"
                          Margin="12"
                          ScrollViewer.VerticalScrollMode="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="vm:IngredientItemViewModel">

                            <controls:CommonCard
                                    CardPressedEvent="CardPressed"
                                    CardPointerEnteredEvent="CardPointerEntered"
                                    CardPointerExitedEvent="CardPointerExited"
                                    DeleteClickedEvent="DeleteButton_Click">

                                <controls:CommonCard.InnerContent>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{Binding Name}"
                                                       FontSize="25"
                                                       FontWeight="Bold"
                                                       Foreground="#FF4B3A2E"/>

                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Kalória:"
                                                       Foreground="#FF4B3A2E"
                                                       FontWeight="SemiBold"
                                                       FontSize="16"/>
                                            
                                            <TextBlock Text="{Binding CalorieText}"
                                                       Foreground="#AA4B3A2E"
                                                       FontSize="16"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Fehérje:"
                                                       Foreground="#FF4B3A2E"
                                                       FontWeight="SemiBold"
                                                       FontSize="16"/>
                                            
                                            <TextBlock Text="{Binding ProteinText}"
                                                       Foreground="#AA4B3A2E"
                                                       FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                </controls:CommonCard.InnerContent>
                            </controls:CommonCard>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackPanel>
        </ScrollViewer>

        <controls:ActionToolbar
                    x:Name="StickyToolbarOverlay"
                    Margin="12,12,12,0"
                    Visibility="Collapsed"
                    EditButtonText="Módosítás"
                    AddButtonText="Hozzáadás"
                    SearchPlaceholderText="Összetevő keresése…"
                    EditClicked="EditIngredient_Click"
                    AddClicked="AddIngredient_Click"
                    SearchTextChanged="SearchIngredient_TextChanged" />


        <controls:ConfirmPopup x:Name="Popup"/>

    </Grid>
</Page>
