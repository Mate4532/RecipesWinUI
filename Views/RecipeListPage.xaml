<Page
    x:Class="RecipesWinUI.Views.RecipeListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:RecipesWinUI.ViewModels"
    xmlns:controls="using:RecipesWinUI.Controls">

    <Grid x:Name="LayoutRoot"
          Background="#FFE8D8B8">

        <ScrollViewer x:Name="ScrollHost"
                      ViewChanged="ScrollHost_ViewChanged">

            <StackPanel>

                <TextBlock Text="Receptek"
                           FontSize="44"
                           FontWeight="Bold"
                           Foreground="#FF4B3A2E"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,16"/>

                <controls:ActionToolbar
                        x:Name="OriginalToolbar"
                        Margin="12,0,12,0"
                        EditButtonText="Módosítás"
                        AddButtonText="Hozzáadás"
                        SearchPlaceholderText="Recept keresése…"
                        EditClicked="EditRecipe_Click"
                        AddClicked="AddRecipe_Click"
                        SearchTextChanged="SearchRecipe_TextChanged" />

                <ListView x:Name="RecipeList"
                          ItemsSource="{Binding Recipes}"
                          SelectionMode="None"
                          Margin="12">
                    
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="vm:RecipeItemViewModel">

                            <controls:CommonCard
                                    CardPressedEvent="CardPressed"
                                    CardPointerEnteredEvent="CardPointerEntered"
                                    CardPointerExitedEvent="CardPointerExited"
                                    DeleteClickedEvent="DeleteButton_Click">
                                
                                <controls:CommonCard.InnerContent>

                                    <StackPanel Spacing="4">

                                        <TextBlock Text="{Binding Name}"
                                                       FontSize="25"
                                                       FontWeight="Bold"
                                                       Foreground="#FF4B3A2E"/>

                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Kalória:" Foreground="#FF4B3A2E" FontWeight="SemiBold" FontSize="16"/>
                                            <TextBlock Text="{Binding CalorieInRecipeString}" Foreground="#AA4B3A2E" FontSize="16"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Fehérje:" Foreground="#FF4B3A2E" FontWeight="SemiBold" FontSize="16"/>
                                            <TextBlock Text="{Binding ProteinInRecipeString}" Foreground="#AA4B3A2E" FontSize="16"/>
                                        </StackPanel>
                                    </StackPanel>
                                </controls:CommonCard.InnerContent>

                                <controls:CommonCard.ExpandContent>

                                    <StackPanel>

                                        <Rectangle Height="1"
                                                   Fill="#FFD7C0A1"
                                                   Margin="0,8,0,8"/>

                                        <TextBlock Text="Összetevők:"
                                                        FontSize="22"
                                                        FontWeight="SemiBold"
                                                        Foreground="#FF4B3A2E"
                                                        Margin="0,0,0,4"/>

                                        <ItemsControl ItemsSource="{Binding IngredientLines}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock TextWrapping="Wrap" FontSize="16">
                                                            <Run Text="     "/>
                                                            <Run Text="{Binding Name}" FontWeight="SemiBold" Foreground="#FF4B3A2E"/>
                                                            <Run Text=": " Foreground="#AA4B3A2E"/>
                                                            <Run Text="{Binding AmountAndUnit}" Foreground="#AA4B3A2E"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <Rectangle Height="1"
                                                   Fill="#FFD7C0A1"
                                                   Margin="0,15,0,8"/>

                                        <TextBlock Text="Leírás:"
                                                        FontSize="22"
                                                        FontWeight="SemiBold"
                                                        Foreground="#FF4B3A2E"
                                                        Margin="0,0,0,4"/>

                                        <TextBlock Text="{Binding Description}"
                                                        TextWrapping="Wrap"
                                                        Foreground="#AA4B3A2E"
                                                        FontSize="16"/>
                                    </StackPanel>

                                </controls:CommonCard.ExpandContent>
                            </controls:CommonCard>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </StackPanel>
        </ScrollViewer>

        <controls:ActionToolbar
            x:Name="StickyToolbarOverlay"
            Margin="12,12,12,0"
            Visibility="Collapsed"
            EditButtonText="Módosítás"
            AddButtonText="Hozzáadás"
            SearchPlaceholderText="Recept keresése…"
            EditClicked="EditRecipe_Click"
            AddClicked="AddRecipe_Click"
            SearchTextChanged="StickyRecipeSearch_TextChanged" />

        <controls:ConfirmPopup x:Name="Popup"/>

    </Grid>
</Page>
