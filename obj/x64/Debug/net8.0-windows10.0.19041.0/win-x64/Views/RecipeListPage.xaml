<Page
    x:Class="RecipesWinUI.Views.RecipeListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:RecipesWinUI.ViewModels"
    xmlns:controls="using:RecipesWinUI.Controls">

    <Grid x:ConnectionId='2' x:Name="LayoutRoot"
          Background="#FFE8D8B8">

        <ScrollViewer x:ConnectionId='3' x:Name="ScrollHost"
                                                          >

            <StackPanel>

                <TextBlock Text="Receptek"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#FF4B3A2E"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,16"/>

                <controls:ActionToolbar x:ConnectionId='6'
                    x:Name="OriginalToolbar"
                    Margin="12,0,12,0"
                    EditButtonText="Módosítás"
                    AddButtonText="Hozzáadás"
                    SearchPlaceholderText="Recept keresése…"
                                                  
                                                
                                                                 />

                <ListView x:ConnectionId='7' x:Name="RecipeList"
                          ItemsSource="{Binding Recipes}"
                          SelectionMode="None"
                          Margin="12">
                    
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate                                    >

                            <controls:CommonCard x:ConnectionId='9'
                                                           
                                                                           
                                                                         
                                                                      >
                                
                                <controls:CommonCard.InnerContent>

                                    <StackPanel Spacing="4">

                                        <TextBlock Text="{Binding Name}"
                                                       FontSize="22"
                                                       FontWeight="Bold"
                                                       Foreground="#FF4B3A2E"/>

                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Kalória:" Foreground="#FF4B3A2E" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding CalorieInRecipeString}" Foreground="#AA4B3A2E"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="Fehérje:" Foreground="#FF4B3A2E" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ProteinInRecipeString}" Foreground="#AA4B3A2E"/>
                                        </StackPanel>
                                    </StackPanel>
                                </controls:CommonCard.InnerContent>

                                <controls:CommonCard.ExpandContent>

                                    <StackPanel>

                                        <Rectangle Height="1"
                                                           Fill="#FFD7C0A1"
                                                           Margin="0,8,0,8"/>

                                        <TextBlock Text="Összetevők:"
                                                        FontSize="20"
                                                        FontWeight="SemiBold"
                                                        Foreground="#FF4B3A2E"
                                                        Margin="0,0,0,4"/>

                                        <ItemsControl ItemsSource="{Binding IngredientLines}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock TextWrapping="Wrap">
                                                            <Run Text="     "/>
                                                            <Run Text="{Binding Name}" FontWeight="SemiBold" Foreground="#FF4B3A2E"/>
                                                            <Run Text=": " Foreground="#AA4B3A2E"/>
                                                            <Run Text="{Binding AmountAndUnit}" Foreground="#AA4B3A2E"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <Rectangle Height="1"
                                                        Fill="#FFD7C0A1"
                                                        Margin="0,15,0,8"/>

                                        <TextBlock Text="Leírás:"
                                                        FontSize="20"
                                                        FontWeight="SemiBold"
                                                        Foreground="#FF4B3A2E"
                                                        Margin="0,0,0,4"/>

                                        <TextBlock Text="{Binding Description}"
                                                        TextWrapping="Wrap"
                                                        Foreground="#AA4B3A2E"/>
                                    </StackPanel>

                                </controls:CommonCard.ExpandContent>
                            </controls:CommonCard>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </StackPanel>
        </ScrollViewer>

        <controls:ActionToolbar x:ConnectionId='4'
            x:Name="StickyToolbarOverlay"
            Margin="12,12,12,0"
            Visibility="Collapsed"
            EditButtonText="Módosítás"
            AddButtonText="Hozzáadás"
            SearchPlaceholderText="Recept keresése…"
                                          
                                        
                                                               />

        <controls:ConfirmPopup x:ConnectionId='5' x:Name="Popup"/>

    </Grid>
</Page>

